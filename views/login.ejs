<%- include('partials/header') %>

<div class="container mt-0">
  

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <h1 class="sign-head">Login</h1>
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="passwordInput" class="form-control" name="password"> 
              <input type="checkbox" id="togglePassView" onclick="togglePassword()"> Show password </input>
            </div>
            <button type="submit" class="btn btn-dark btn-login col-lg-12">Login</button>
            <a class="btn btn-danger col-lg-12" href="/auth/google" role="button"><i class="bi bi-google"></i> Sign In with Google </a>
            <a class="btn btn-outline-dark col-lg-12" onclick="location.href = 'register';">Don't you have account? Register!</a>
          </form>

        </div>
      </div>
    </div>

